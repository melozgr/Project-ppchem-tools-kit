pip install rdkit
from rdkit import Chem
from rdkit.Chem import AllChem
mol1 = Chem.MolFromSmiles(O)
mol2 = Chem.MolFromSmiles(F)

# Assurez-vous que les hydrogènes sont ajoutés et que les informations de la liaison sont disponibles
mol1 = Chem.AddHs(mol1)
mol2 = Chem.AddHs(mol2)

# Calcule des informations sur la molécule
AllChem.ComputeGasteigerCharges(mol1)
AllChem.ComputeGasteigerCharges(mol2)

# Obtenez les atomes des molécules
atomes_mol1 = mol1.GetAtoms()
atomes_mol2 = mol2.GetAtoms()
pauling = {
    "H": 2.20, "C": 2.55, "N": 3.04, "O": 3.44, "F": 3.98,
    "Na": 0.93, "Mg": 1.31, "Al": 1.61, "Si": 1.90, "P": 2.19,
    "S": 2.58, "Cl": 3.16, "K": 0.82, "Ca": 1.00, "Br": 2.96,
    "I": 2.66
}

# Calculez l'électronégativité moyenne pour chaque molécule
electroneg_mol1 = sum(pauling[atom.GetSymbol()] for atom in atomes_mol1) / len(atomes_mol1)
electroneg_mol2 = sum(pauling[atom.GetSymbol()] for atom in atomes_mol2) / len(atomes_mol2)

# Comparez les électronégativités
if electroneg_mol1 > electroneg_mol2:
    print("La molécule 1 a une électronégativité plus élevée.")
elif electroneg_mol1 < electroneg_mol2:
    print("La molécule 2 a une électronégativité plus élevée.")
else:
    print("Les molécules ont la même électronégativité.")
