import pubchempy as pcp

# Fonction pour convertir le nom d'une molécule en SMILES
def nom_to_smiles(nom_molecule):
    compound = pcp.get_compounds(nom_molecule, 'name')
    return compound[0].canonical_smiles if compound else None

# Entrée du nom de la molécule
nom_molecule = input("Entrez le nom de la molécule : ")

# Conversion du nom en SMILES
smiles_molecule = nom_to_smiles(nom_molecule)

# Affichage du SMILES
if smiles_molecule is not None:
    print("Le SMILES de la molécule", nom_molecule, "est :", smiles_molecule)
else:
    print("Le SMILES de la molécule", nom_molecule, "n'a pas été trouvé.")